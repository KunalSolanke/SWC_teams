<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="exampleModalLabel">Update config var</h5>
        <button type="button" data-bs-dismiss="modal" aria-label="Close"
          class="btn btn-secondary cross"><i class="fa fa-times" aria-hidden="true"></i>
        </button>
      </div>
      <div class="modal-body">
        <form id="updateModal_form">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label" aria-disabled="true">Key</label>
            <input type="text" class="form-control" id="config_update_modal_key" disabled name="key">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Value</label>
            <input type="text" class="form-control"  id="config_update_modal_value" name="value"></textarea>
          </div>
        </form>
      </div>  
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary hideUpdateModal" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-info" id="updateConfigSave">Update</button>
      </div>
    </div>
  </div>
</div>





<div class="container">
  <div class="row text-white mt-4  p-4 mb-2">
    <div class="col col-lg-4">
      <h5>Config Vars</h5>
    </div>
    <div class="col col-lg-8 text-center" id="configurations">
      <% project.config_vars.forEach(function(config,idx){ %>
          <form id="config-form-<%= idx+1 %>" style="margin-bottom: 12px;">
            <div class="row form-row align-items-center">
                  <div class="col col-lg-5">
                    <label class="sr-only" for="inlineFormInput">Name</label>
                    <input type="text" class="form-control mb-2 text-white" style="background-color:#3d3d48" id="key" name="key"
                      placeholder="Key" required value="<%= config.key %>" disabled data_id="key_<%= idx+1 %>"/>
                  </div>
                  <div class="col col-lg-5">
                    <label class="sr-only" for="inlineFormInput">Name</label>
                    <input type="text" class="form-control mb-2 text-white" style="background-color:#3d3d48" id="value"
                      name="value" placeholder="value" required value="<%= config.value %>" disabled data_id="value_<%= idx+1 %>" />
                  </div>
                  <div class="col col-lg-1">
                      <button type="button"  data_id ="pencil_<%= idx+1 %>" data-bs-toggle="modal" data-bs-target="#updateModal" data-whatever="@mdo" class="btn btn-secondary mb-2 pencil" id="pencil"><i class="fa fa-1x fa-pencil" aria-hidden="true"></i>
                      </button>
                  </div>
                  <div class="col col-lg-1">
                    <button type="button" data_id ="cross_<%= idx+1 %>" data-bs-toggle="modal" data-bs-target="#closeModal" data-whatever="@Hi" class="btn btn-secondary mb-2 cross" id="cross"><i class="fa fa-times" aria-hidden="true"></i></button>
                  </div>
            </div>
          </form>
      <% }) %>
      <form  style="margin-bottom: 12px;">
        <div class="row form-row align-items-center">
              <div class="col col-lg-5">
                <label class="sr-only" for="inlineFormInput">Name</label>
                <input type="text" class="form-control mb-2 text-white" style="background-color:#3d3d48" id="key" name="key"
                  placeholder="Key" required  />
              </div>
              <div class="col col-lg-5">
                <label class="sr-only" for="inlineFormInput">Name</label>
                <input type="text" class="form-control mb-2 text-white" style="background-color:#3d3d48" id="value"
                  name="value" placeholder="value" />
              </div>
              <div id="addbtn-container" class="col-lg-2">
                <button id="add" type="submit" class="btn btn-secondary mb-2">Add</button>
              </div>
        </div>
      </form>
    </div>
  </div>
  </div>
